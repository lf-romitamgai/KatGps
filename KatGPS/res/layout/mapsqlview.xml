<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:weightSum="100">
   
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="20" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tableLayout1" >

        <TableRow >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="ID" 
                android:layout_weight="1"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Name" 
                android:layout_weight="1"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Lattitude" 
                android:layout_weight="1"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Longitude" 
                android:layout_weight="1"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Description" 
                android:layout_weight="1"/>
              
        </TableRow>

    </TableLayout>

            <TextView
                android:id="@+id/tvSQLinfo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="get info from db" />
           
            <EditText
                android:id="@+id/etSQLdl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter an ID to delete or update"
                 />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter name to update"/>

            <EditText
                android:id="@+id/etLatt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter lattitude to update" />

            <EditText
                android:id="@+id/etLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter Longitude to update" >

            </EditText>

            <Button
                android:id="@+id/bSQLdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete" />

            <Button
                android:id="@+id/bUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update" />

            <Button
                android:id="@+id/bAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add" />
            </LinearLayout>
    </ScrollView>

</LinearLayout>
